<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
       default-lazy-init="true">

    <!-- 此配置维护数据源 -->

    <!-- 数据源 -->
    <bean id="db1" parent="baseDatasource" class="com.alibaba.druid.pool.DruidDataSource">
        <property name="driverClassName" value="${jdbc.db1.driverClassName}"/>
        <!-- 用来检测连接是否有效的sql(druid必须配置)-->
        <property name="validationQuery" value="${jdbc.db1.validationQuery}"/>
        <property name="url" value="${jdbc.db1.url}"/>
        <property name="username" value="${jdbc.db1.username}"/>
        <property name="password" value="${jdbc.db1.password}"/>
    </bean>
    <bean id="db1SqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="db1"/>
        <property name="configLocation" value="classpath:spring/mybatis-config.xml" />
        <property name="mapperLocations">
            <list>
                <value>classpath:mapper/*Mapper.xml</value>
            </list>
        </property>
    </bean>
    <!-- 自动扫描和注册Mapper接口 basePackage是用来指定Mapper接口文件所在的基包， 在这个基包或其所有子包下面的Mapper接口都将被搜索到。
    多个基包之间可以使用逗号或者分号进行分隔 -->
    <bean id="db1MapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.cmbi.app.dal.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="db1SqlSessionFactory"/>
    </bean>
    <!-- 配置事务管理器 -->
    <bean id="db1TransactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="db1"/>
    </bean>

</beans>